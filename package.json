{
    "name": "@iota-pico/api-examples-nodejs",
    "version": "1.0.0",
    "description": "IOTA Pico Framework Examples for NodeJS using TypeScript",
    "engines": {
        "node": ">=8"
    },
    "scripts": {
        "build-clean": "rimraf ./dist/*",
        "build-compile": "tsc",
        "build-lint": "tslint -p ./tsconfig.json -c ./tslint.json -t verbose",
        "build": "npm-run-all build-clean build-compile build-lint",
        "dist": "npm-run-all build"
    },
    "author": "martyn@iota.eco",
    "license": "MIT",
    "bin": {
        "ipent": "bin/ipent.js"
    },
    "dependencies": {
        "@iota-pico/api": "^1.0.0",
        "@iota-pico/core": "^1.0.0",
        "@iota-pico/pal-nodejs": "^1.0.0",
        "chalk": "^2.4.1",
        "commander": "^2.17.1"
    },
    "devDependencies": {
        "@types/node": "^10.9.4",
        "npm-run-all": "^4.1.3",
        "rimraf": "^2.6.2",
        "tslint": "^5.11.0",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-microsoft-contrib": "^5.2.1",
        "typescript": "^3.0.3",
        "webpack": "^4.17.1",
        "webpack-cli": "^3.1.0"
    }
}
